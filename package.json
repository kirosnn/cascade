{
  "name": "@cascadetui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/core && bun run build && cd ../solid && bun run build && cd ../react && bun run build",
    "pre-publish": "bun scripts/pre-publish.ts",
    "publish": "bun run pre-publish && bun run publish:core && bun run publish:react && bun run publish:solid && bun run publish:create && bun run publish:skill",
    "publish:core": "cd packages/core && bun run publish",
    "publish:react": "cd packages/react && bun run publish",
    "publish:solid": "cd packages/solid && bun run publish",
    "publish:create": "cd packages/create-cascade && bun run publish:pkg",
    "publish:skill": "cd packages/skill && bun run publish:pkg",
    "prepare-release": "bun scripts/prepare-release.ts",
    "prettier:write": "prettier --write .",
    "test:core": "bun test packages/core/src",
    "test:create": "bun scripts/test-create-cascade.ts",
    "test:react": "cd packages/react && bun test",
    "test:solid": "cd packages/solid && bun test",
    "test:web": "cd packages/web && bun test",
    "test": "bun run test:core && bun run test:react && bun run test:solid",
    "publish:release": "bun scripts/publish-and-release.ts",
    "web:dev": "cd packages/web && bun run dev",
    "web:build": "cd packages/web && bun run build"
  },
  "devDependencies": {
    "@cascadetui/core": "workspace:*",
    "@cascadetui/react": "workspace:*",
    "@cascadetui/solid": "workspace:*",
    "solid-js": "^1.9.0",
    "prettier": "3.6.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "openai": "^6.25.0",
    "simple-git": "^3.32.3"
  }
}
